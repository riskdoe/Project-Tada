<ul
    hx-get="/api/v1/messages"
    hx-trigger="load delay:1s"
    hx-swap="outerHTML"
>
    {% for message in messages %}
        <li class="border-dashed border-b border-slate-400 dark:border-slate-600"><span id="username" class="text-xl text-slate-200">{{ message[1] }}</span> : <span id="message" class="text-xl text-slate-300">{{ message[2] }}</span></li>
    {% endfor %}
</ul>

